{
  "metadata": {
    "name": "統一アプリケーション設定",
    "description": "感染症コンテンツ共通設定ファイル",
    "version": "3.0.0",
    "disease": "shared",
    "diseaseNameJa": "共通",
    "lastUpdated": "2024-12-20",
    "templateVersion": "1.0.0"
  },

  "app": {
    "info": {
      "name": "グローバルヘルスとの闘い",
      "language": "ja",
      "version": "1.0.0",
      "baseUrl": "data/"
    },
    "layout": {
      "header": {
        "height": 60,
        "zIndex": 1000
      },
      "content": {
        "maxWidth": 1200,
        "padding": {
          "desktop": 32,
          "tablet": 24,
          "mobile": 16
        }
      },
      "sticky": {
        "offset": 60,
        "zIndex": 100
      },
      "positioning": {
        "textPosition": "overlay",
        "chartPosition": "background"
      }
    },
    "scrolling": {
      "offset": 0.5,
      "progress": true,
      "threshold": 1,
      "once": false,
      "debug": false
    },
    "performance": {
      "debounceResize": 250,
      "throttleScroll": 100,
      "maxDataPoints": 1000,
      "enableWebGL": false
    }
  },

  "content": {
    "images": {
      "lazyLoad": true,
      "fadeIn": true,
      "preload": ["assets/images/hero.jpg"],
      "placeholder": "data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1 1'%3E%3Crect width='1' height='1' fill='%23f3f4f6'/%3E%3C/svg%3E"
    },
    "charts": {
      "defaultType": "line",
      "defaultMargin": {
        "top": 40,
        "right": 40,
        "bottom": 60,
        "left": 60
      },
      "minHeight": 300,
      "maxHeight": 800,
      "aspectRatio": 1.6,
      "responsive": true,
      "responsiveThreshold": 768,
      "animations": {
        "enabled": true,
        "duration": 1000
      }
    },
    "maps": {
      "defaultCenter": [0, 0],
      "defaultZoom": 1,
      "minZoom": 0.5,
      "maxZoom": 20,
      "zoomStep": 0.5,
      "defaultProjection": "naturalEarth1",
      "enableInteraction": false,
      "responsive": true,
      "interactions": {
        "zoom": true,
        "pan": true
      }
    },
    "data": {
      "baseUrl": "data/",
      "caching": {
        "enabled": true,
        "duration": 3600
      },
      "formats": {
        "csv": true,
        "json": true
      }
    }
  },

  "design": {
    "colors": {
      "disease": {
        "primary": "#2563eb",
        "secondary": "#3b82f6",
        "accent": "#1d4ed8"
      },
      "system": {
        "primary": {
          "blue": "#2563eb",
          "red": "#dc2626",
          "green": "#059669",
          "orange": "#d97706",
          "purple": "#7c3aed",
          "cyan": "#0891b2",
          "pink": "#be185d",
          "lime": "#65a30d"
        },
        "text": {
          "primary": "#1f2937",
          "secondary": "#374151",
          "body": "#4b5563",
          "light": "#6b7280",
          "muted": "#9ca3af",
          "white": "#ffffff"
        },
        "background": {
          "white": "#ffffff",
          "light": "#f9fafb",
          "gray": "#f3f4f6",
          "dark": "#e5e7eb"
        },
        "border": {
          "light": "#e5e7eb",
          "default": "#d1d5db",
          "dark": "#9ca3af"
        },
        "semantic": {
          "success": "#059669",
          "warning": "#d97706",
          "error": "#dc2626",
          "info": "#2563eb"
        }
      },
      "chart": {
        "line": ["#2563eb", "#f97316", "#059669", "#d97706", "#7c3aed", "#0891b2"],
        "bar": ["#3b82f6", "#f97316", "#10b981", "#f59e0b", "#8b5cf6", "#06b6d4"],
        "pie": ["#2563eb", "#ea580c", "#047857", "#b45309", "#6d28d9", "#0e7490"],
        "map": {
          "default": "#e5e7eb",
          "hover": "#2563eb",
          "active": "#1d4ed8",
          "selected": "#dc2626"
        }
      }
    },
    "typography": {
      "fontFamily": {
        "sans": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans JP', 'Hiragino Kaku Gothic ProN', 'Hiragino Sans', Meiryo, sans-serif",
        "serif": "'Shippori Mincho', 'Yu Mincho', 'YuMincho', 'Hiragino Mincho ProN', 'Hiragino Mincho Pro', 'Noto Serif JP', 'HG Mincho E', 'MS Mincho', serif",
        "mono": "Consolas, Monaco, 'Courier New', monospace"
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem"
      },
      "fontWeight": {
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeight": {
        "tight": 1.25,
        "normal": 1.5,
        "relaxed": 1.625,
        "loose": 1.75
      },
      "letterSpacing": {
        "tight": "-0.025em",
        "normal": "0em",
        "wide": "0.025em"
      }
    }
  },

  "animation": {
    "durations": {
      "instant": 0,
      "fast": 150,
      "short": 300,
      "default": 500,
      "long": 800,
      "slow": 1200,
      "verySlow": 2000
    },
    "easings": {
      "linear": "linear",
      "ease": "ease",
      "easeIn": "ease-in",
      "easeOut": "ease-out",
      "easeInOut": "ease-in-out",
      "quadIn": "cubic-bezier(0.550, 0.085, 0.680, 0.530)",
      "quadOut": "cubic-bezier(0.250, 0.460, 0.450, 0.940)",
      "quadInOut": "cubic-bezier(0.455, 0.030, 0.515, 0.955)",
      "cubicIn": "cubic-bezier(0.550, 0.055, 0.675, 0.190)",
      "cubicOut": "cubic-bezier(0.215, 0.610, 0.355, 1.000)",
      "cubicInOut": "cubic-bezier(0.645, 0.045, 0.355, 1.000)"
    },
    "presets": {
      "chartUpdate": {
        "duration": 500,
        "easing": "cubicInOut"
      },
      "mapZoom": {
        "duration": 800,
        "easing": "cubicInOut"
      },
      "fadeIn": {
        "duration": 300,
        "easing": "easeOut"
      },
      "fadeOut": {
        "duration": 150,
        "easing": "easeIn"
      },
      "slideIn": {
        "duration": 400,
        "easing": "cubicOut"
      },
      "slideOut": {
        "duration": 300,
        "easing": "cubicIn"
      }
    },
    "accessibility": {
      "respectPrefersReducedMotion": true,
      "reducedMotionDuration": 0,
      "reducedMotionEasing": "linear"
    }
  },

  "responsive": {
    "breakpoints": {
      "mobile": 768,
      "tablet": 1024,
      "desktop": 1200,
      "wide": 1400
    },
    "enabled": true
  },

  "ui": {
    "theme": "shared",
    "animations": {
      "enabled": true,
      "duration": 800
    }
  },

  "transitions": {
    "duration": 500,
    "ease": "cubic-in-out"
  }
}

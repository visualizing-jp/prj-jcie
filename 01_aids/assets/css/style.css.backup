/* ==================================================
   Typography System - JCIE Style Inspired
   ================================================== */

/* CSS Variables for Typography, Colors, Animation, and Layout */
:root {
    /* Font Families */
    --font-family-primary: -apple-system, BlinkMacSystemFont, "Segoe UI", "Noto Sans JP", "Hiragino Kaku Gothic ProN", "Hiragino Sans", Meiryo, sans-serif;
    --font-family-heading: -apple-system, BlinkMacSystemFont, "Segoe UI", "Noto Sans JP", "Hiragino Kaku Gothic ProN", "Hiragino Sans", Meiryo, sans-serif;
    --font-family-serif: "Shippori Mincho", "Yu Mincho", "YuMincho", "Hiragino Mincho ProN", "Hiragino Mincho Pro", "Noto Serif JP", "HG Mincho E", "MS Mincho", serif;
    
    /* Font Sizes */
    --font-size-xs: 0.75rem;      /* 12px */
    --font-size-sm: 0.875rem;     /* 14px */
    --font-size-base: 1rem;       /* 16px */
    --font-size-lg: 1.125rem;     /* 18px */
    --font-size-xl: 1.25rem;      /* 20px */
    --font-size-2xl: 1.5rem;      /* 24px */
    --font-size-3xl: 1.875rem;    /* 30px */
    --font-size-4xl: 2.25rem;     /* 36px */
    
    /* Font Weights */
    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;
    
    /* Line Heights */
    --line-height-tight: 1.25;
    --line-height-normal: 1.5;
    --line-height-relaxed: 1.625;
    --line-height-loose: 1.75;
    
    /* Letter Spacing */
    --letter-spacing-tight: -0.025em;
    --letter-spacing-normal: 0em;
    --letter-spacing-wide: 0.025em;
    
    /* Animation Durations (will be overridden by config loader) */
    --animation-instant: 0ms;
    --animation-fast: 150ms;
    --animation-short: 300ms;
    --animation-default: 500ms;
    --animation-long: 800ms;
    --animation-slow: 1200ms;
    --animation-very-slow: 2000ms;
    
    /* Easing Functions (will be overridden by config loader) */
    --easing-linear: linear;
    --easing-ease: ease;
    --easing-ease-in: ease-in;
    --easing-ease-out: ease-out;
    --easing-ease-in-out: ease-in-out;
    --easing-quad-in: cubic-bezier(0.550, 0.085, 0.680, 0.530);
    --easing-quad-out: cubic-bezier(0.250, 0.460, 0.450, 0.940);
    --easing-quad-in-out: cubic-bezier(0.455, 0.030, 0.515, 0.955);
    --easing-cubic-in: cubic-bezier(0.550, 0.055, 0.675, 0.190);
    --easing-cubic-out: cubic-bezier(0.215, 0.610, 0.355, 1.000);
    --easing-cubic-in-out: cubic-bezier(0.645, 0.045, 0.355, 1.000);
    
    /* Color System (will be overridden by config loader) */
    --color-primary-blue: #2563eb;
    --color-primary-red: #dc2626;
    --color-primary-green: #059669;
    --color-primary-orange: #d97706;
    --color-primary-purple: #7c3aed;
    --color-primary-cyan: #0891b2;
    --color-primary-pink: #be185d;
    --color-primary-lime: #65a30d;
    
    --color-text-primary: #1f2937;
    --color-text-secondary: #374151;
    --color-text-body: #4b5563;
    --color-text-light: #6b7280;
    --color-text-muted: #9ca3af;
    --color-text-white: #ffffff;
    
    --color-background-white: #ffffff;
    --color-background-light: #f9fafb;
    --color-background-gray: #f3f4f6;
    --color-background-dark: #1f2937;
    
    --color-border-light: #e5e7eb;
    --color-border-default: #d1d5db;
    --color-border-dark: #9ca3af;
    
    --color-accent-success: #10b981;
    --color-accent-info: #3b82f6;
    --color-accent-warning: #f59e0b;
    --color-accent-error: #ef4444;
    
    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-default: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    
    /* Layout (will be overridden by config loader) */
    --header-height: 60px;
    --content-max-width: 1200px;
    --spacing-xs: 4px;
    --spacing-sm: 8px;
    --spacing-md: 16px;
    --spacing-lg: 24px;
    --spacing-xl: 32px;
    --spacing-xxl: 48px;
    
    /* Z-Index (will be overridden by config loader) */
    --z-background: -1;
    --z-default: 1;
    --z-sticky: 10;
    --z-dropdown: 100;
    --z-modal: 1000;
    --z-tooltip: 1050;
    --z-notification: 1100;
}

/* Base Typography */
body {
    font-family: var(--font-family-primary);
    font-size: var(--font-size-base);
    line-height: var(--line-height-normal);
    letter-spacing: var(--letter-spacing-normal);
    color: var(--color-text-secondary);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

/* Heading Hierarchy */
h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-family-heading);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
    color: var(--color-text-primary);
    margin: 0 0 1rem 0;
}

h1 {
    font-family: var(--font-family-serif);
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-semibold);
    letter-spacing: var(--letter-spacing-normal);
    margin-bottom: 1.5rem;
}

h2 {
    font-family: var(--font-family-serif);
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-semibold);
    letter-spacing: var(--letter-spacing-normal);
    margin-bottom: 1.25rem;
}

h3 {
    font-family: var(--font-family-serif);
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-semibold);
    letter-spacing: var(--letter-spacing-normal);
    margin-bottom: 1rem;
}

h4 {
    font-size: var(--font-size-xl);
    letter-spacing: var(--letter-spacing-normal);
    margin-bottom: 0.75rem;
}

h5 {
    font-size: var(--font-size-lg);
    letter-spacing: var(--letter-spacing-normal);
    margin-bottom: 0.5rem;
}

h6 {
    font-size: var(--font-size-base);
    letter-spacing: var(--letter-spacing-wide);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
}

/* Body Text */
p {
    font-size: var(--font-size-base);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-body);
    margin: 0 0 1.25rem 0;
}

p.lead {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    font-weight: var(--font-weight-normal);
    color: var(--color-text-secondary);
}

p.small {
    font-size: var(--font-size-sm);
    line-height: var(--line-height-normal);
    color: var(--color-text-light);
}

/* Text Utility Classes */
.text-emphasis {
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
}

.text-muted {
    color: var(--color-text-light);
}

.text-subtle {
    color: var(--color-text-muted);
}

/* Lists */
ul, ol {
    font-size: var(--font-size-base);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-body);
    margin: 0 0 1.25rem 0;
    padding-left: 1.5rem;
}

li {
    margin-bottom: 0.5rem;
}

/* Links */
a {
    color: var(--color-primary-blue);
    text-decoration: none;
    transition: color var(--animation-short) var(--easing-ease-in-out);
}

a:hover {
    color: #1d4ed8;
    text-decoration: underline;
}

/* Responsive Typography */
@media (max-width: 768px) {
    :root {
        --font-size-4xl: 1.875rem;  /* 30px */
        --font-size-3xl: 1.5rem;    /* 24px */
        --font-size-2xl: 1.25rem;   /* 20px */
    }
    
    body {
        font-size: var(--font-size-sm);
    }
    
    p {
        font-size: var(--font-size-sm);
        line-height: var(--line-height-loose);
    }
}

/* ==================================================
   End Typography System
   ================================================== */

/* カスタムスタイル */

/* サイトヘッダー */
#site-header {
    height: var(--header-height);
    background-color: var(--color-background-white);
    border-bottom: 1px solid var(--color-border-light);
    box-shadow: var(--shadow-sm);
}

#site-header .site-title h1 {
    font-family: var(--font-family-serif);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin: 0;
    line-height: var(--line-height-tight);
}

#site-header .site-nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 1.5rem;
}

#site-header .site-nav li {
    margin: 0;
    min-width: 80px; /* 横幅を統一 */
    text-align: center;
    position: relative;
}

#site-header .site-nav a {
    text-decoration: none;
    color: var(--color-text-light);
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-sm);
    transition: color var(--animation-short) var(--easing-ease);
    display: block;
    padding: var(--spacing-xs) var(--spacing-sm);
    position: relative;
}

/* 汎用的なホバー（エイズ以外で特定のテーマ色が設定されていない場合のフォールバック） */
#site-header .site-nav a:hover {
    color: #2563eb;
}

#site-header .site-nav span {
    color: #111827;
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-sm);
    display: block;
    padding: 4px 8px;
}

/* リンクバーのスタイル - 結核（青） */
#site-header .site-nav a[href*="tuberculosis"]::before,
#site-header .site-nav li:nth-child(2) a::before {
    content: '';
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 6px; /* 高さを二倍に */
    background-color: #2c5aa0; /* 結核の青色 */
    border-radius: 3px;
}

/* 結核リンクのホバー時の文字色 */
#site-header .site-nav a[href*="tuberculosis"]:hover,
#site-header .site-nav li:nth-child(2) a:hover {
    color: #2c5aa0; /* 結核の青色 */
}

/* リンクバーのスタイル - マラリア（黄色） */
#site-header .site-nav a[href*="malaria"]::before,
#site-header .site-nav li:nth-child(3) a::before {
    content: '';
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 6px; /* 高さを二倍に */
    background-color: #f4a620; /* マラリアの黄色 */
    border-radius: 3px;
}

/* マラリアリンクのホバー時の文字色 */
#site-header .site-nav a[href*="malaria"]:hover,
#site-header .site-nav li:nth-child(3) a:hover {
    color: #f4a620; /* マラリアの黄色 */
}

/* 地図上の国名ラベルスタイル - 全パターンに対応 */
.city-label,
.single-city-label,
.timeline-label,
#map text,
#map-container text {
    font-family: "Shippori Mincho", "Yu Mincho", "YuMincho", "Hiragino Mincho ProN", "Hiragino Mincho Pro", "Noto Serif JP", "HG Mincho E", "MS Mincho", serif !important;
    font-weight: bold !important;
    font-size: 16px !important; /* 文字サイズを統一して大きく */
}

#container {
    position: relative;
}

#fixed-background {
    position: fixed;
    top: 60px;
    left: 0;
    width: 100%;
    height: calc(100% - 60px);
    z-index: 1;
}

#scroll-content {
    position: relative;
    z-index: 10;
}

.step {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}

/* チャートコンテナのスタイル */
#chart-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 1;
    transition: opacity 0.5s ease-in-out;
}

#chart-container.visible {
    opacity: 1;
}

/* チャート内のSVG要素のスタイル */
#chart-container svg {
    flex-shrink: 0; /* SVGが縮小されないように */
    margin: auto; /* SVG要素自体も中央配置 */
}

/* D3チャートコンテナ */
#chart {
    /* SVGのサイズに応じてコンテナサイズが決まる */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: visible; /* はみ出したSVGを表示 */
    width: 100%;
    height: 100%;
    min-width: 300px;
    min-height: 200px;
}

/* 地図コンテナのスタイル */
#map-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
}

#map-container svg {
    max-width: 100%;
    max-height: 100%;
}

#map-container.visible {
    opacity: 1;
}

/* 画像コンテナのスタイル */
#image-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
}

#image-container.visible {
    opacity: 1;
}

/* ====================================
   コンテンツポジショニングシステム
   ==================================== */

/* 基本ポジション設定 */
.positioned-content {
    position: absolute;
    display: flex;
    justify-content: center; /* デフォルト：水平中央 */
    align-items: center;     /* デフォルト：垂直中央 */
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    transition: all var(--animation-default) var(--easing-ease-in-out);
    z-index: var(--z-default);
}

/* 水平位置制御 */
.positioned-content.content-left {
    justify-content: flex-start !important;
    padding-left: var(--spacing-xl);
}

.positioned-content.content-center {
    justify-content: center !important;
}

.positioned-content.content-right {
    justify-content: flex-end !important;
    padding-right: var(--spacing-xl);
}

/* 垂直位置との組み合わせを明示的に定義 */
.positioned-content.content-left.content-middle,
.positioned-content.content-center.content-middle,
.positioned-content.content-right.content-middle {
    align-items: center !important;
}

.positioned-content.content-left.content-top,
.positioned-content.content-center.content-top,
.positioned-content.content-right.content-top {
    align-items: flex-start !important;
}

.positioned-content.content-left.content-bottom,
.positioned-content.content-center.content-bottom,
.positioned-content.content-right.content-bottom {
    align-items: flex-end !important;
}

/* 垂直位置制御 */
.positioned-content.content-top {
    align-items: flex-start !important;
    padding-top: var(--spacing-xl);
}

.positioned-content.content-middle {
    align-items: center !important;
}

.positioned-content.content-bottom {
    align-items: flex-end !important;
    padding-bottom: var(--spacing-xl);
}

/* 明示的なheightが指定された場合の垂直センタリング */
.positioned-content.content-middle[style*="height"] {
    top: 50% !important;
    bottom: auto !important;
    transform: translateY(-50%);
}

.positioned-content.content-top[style*="height"] {
    top: var(--spacing-xl) !important;
    bottom: auto !important;
    transform: none;
}

.positioned-content.content-bottom[style*="height"] {
    top: auto !important;
    bottom: var(--spacing-xl) !important;
    transform: none;
}

/* グリッドベースレイアウト */
.content-grid-left {
    left: 0;
    right: 50%;
}

.content-grid-right {
    left: 50%;
    right: 0;
}

.content-grid-center {
    left: 25%;
    right: 25%;
}

/* コンテンツ内部の子要素制御 */
.positioned-content > * {
    flex-shrink: 0;
    max-width: 100%;
    max-height: 100%;
}

/* レスポンシブ対応 */
.responsive-content {
    /* レスポンシブ調整は JavaScript で制御 */
}

/* 小画面用スタイル */
@media (max-width: 768px) {
    .content-small-screen {
        justify-content: center !important;
        align-items: center !important;
        padding: 1rem !important;
    }
    
    .content-small-screen.content-left,
    .content-small-screen.content-right {
        padding-left: 1rem !important;
        padding-right: 1rem !important;
    }
}

@media (max-width: 480px) {
    .content-small-screen {
        padding: 0.5rem !important;
    }
}

/* 複数コンテンツ表示用 */
.multi-content-container {
    position: relative;
    width: 100%;
    height: 100%;
}

.multi-content-item {
    position: absolute;
    top: 0;
    bottom: 0;
    transition: all var(--animation-default) var(--easing-ease-in-out);
}

/* 分割レイアウト用 */
.split-layout-2 .multi-content-item:nth-child(1) {
    left: 0;
    width: 50%;
}

.split-layout-2 .multi-content-item:nth-child(2) {
    left: 50%;
    width: 50%;
}

.split-layout-3 .multi-content-item:nth-child(1) {
    left: 0;
    width: 33.333%;
}

.split-layout-3 .multi-content-item:nth-child(2) {
    left: 33.333%;
    width: 33.333%;
}

.split-layout-3 .multi-content-item:nth-child(3) {
    left: 66.666%;
    width: 33.333%;
}

/* 小画面での積み重ねレイアウト */
@media (max-width: 768px) {
    .multi-content-item {
        position: relative !important;
        left: auto !important;
        width: 100% !important;
        height: 50vh !important;
        margin-bottom: 1rem;
    }
}

/* アニメーション強化 */
.positioned-content.animate-in {
    animation: slideIn var(--animation-long) var(--easing-ease-out);
}

.positioned-content.animate-out {
    animation: slideOut var(--animation-fast) var(--easing-ease-in);
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes slideOut {
    from {
        opacity: 1;
        transform: translateY(0);
    }
    to {
        opacity: 0;
        transform: translateY(-20px);
    }
}

/* デバッグ用（開発時のみ） */
.positioned-content.debug {
    border: 2px dashed rgba(255, 0, 0, 0.5);
    background: rgba(255, 255, 0, 0.1);
}

.positioned-content.debug::before {
    content: attr(data-position-info);
    position: absolute;
    top: -25px;
    left: 0;
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 2px 8px;
    font-size: var(--font-size-xs);
    border-radius: 3px;
    z-index: 1000;
}

/* コンテンツ間のスペーシング調整 */
.positioned-content + .positioned-content {
    /* 複数コンテンツが重なる場合の調整 */
}

/* 高解像度画面対応 */
@media (min-width: 1920px) {
    .positioned-content {
        /* 大画面での最適化 */
    }
}

/* アクセシビリティ対応 */
@media (prefers-reduced-motion: reduce) {
    .positioned-content,
    .positioned-content *,
    .multi-content-item {
        transition: none !important;
        animation: none !important;
    }
}

/* ====================================
   テキストポジショニングシステム
   ==================================== */

/* 基本テキストポジション設定 */
.positioned-text {
    position: relative;
    width: 100%;
    min-height: 100vh;
    display: flex;
    transition: all 0.5s ease-in-out;
}

/* 水平位置制御 */
.positioned-text.text-left {
    justify-content: flex-start !important;
    padding-left: 2rem;
    padding-right: 6rem; /* 右側に余白を確保 */
}

.positioned-text.text-center {
    justify-content: center !important;
    padding-left: 2rem;
    padding-right: 2rem;
}

.positioned-text.text-right {
    justify-content: flex-end !important;
    padding-left: 6rem; /* 左側に余白を確保 */
    padding-right: 2rem;
}

/* 垂直位置制御 */
.positioned-text.text-top {
    align-items: flex-start !important;
    padding-top: 4rem;
    padding-bottom: 2rem;
}

.positioned-text.text-middle {
    align-items: center !important;
    padding-top: 2rem;
    padding-bottom: 2rem;
}

.positioned-text.text-bottom {
    align-items: flex-end !important;
    padding-top: 2rem;
    padding-bottom: 4rem;
}

/* テキストコンテナの基本設定 */
.positioned-text .text-container,
.positioned-text .max-w-lg,
.positioned-text div[class*="bg-white"] {
    flex-shrink: 0;
    box-sizing: border-box;
    min-width: 300px;
    max-width: none !important;
}

/* config.jsonでwidth指定がある場合は、それを優先 */
.positioned-text[style*="width"] .max-w-lg {
    max-width: none !important;
}

/* グリッドベースレイアウト対応 */
.text-grid-left {
    justify-content: flex-start !important;
    max-width: 50%;
}

.text-grid-right {
    justify-content: flex-end !important;
    max-width: 50%;
    margin-left: auto;
}

.text-grid-center {
    justify-content: center !important;
    max-width: 60%;
    margin: 0 auto;
}

/* レスポンシブ対応 */
@media (max-width: 768px) {
    .text-small-screen {
        justify-content: center !important;
        align-items: center !important;
        padding: 1rem !important;
    }
    
    .text-small-screen .text-container,
    .text-small-screen .max-w-lg,
    .text-small-screen div[class*="bg-white"] {
        max-width: 100% !important;
        margin: 0 !important;
    }
    
    /* 小画面では左右配置を中央に強制変更 */
    .text-small-screen.text-left,
    .text-small-screen.text-right {
        padding-left: 1rem !important;
        padding-right: 1rem !important;
    }
}

@media (max-width: 480px) {
    .text-small-screen {
        padding: 0.5rem !important;
    }
    
    .text-small-screen .text-container,
    .text-small-screen .max-w-lg,
    .text-small-screen div[class*="bg-white"] {
        min-width: 280px !important;
        padding: 1rem !important;
    }
}

/* 複数コンテンツとの組み合わせ対応 */
.positioned-text.has-chart-left {
    padding-left: 50%; /* チャートが左にある場合 */
}

.positioned-text.has-chart-right {
    padding-right: 50%; /* チャートが右にある場合 */
}

.positioned-text.has-map-left {
    padding-left: 50%; /* 地図が左にある場合 */
}

.positioned-text.has-map-right {
    padding-right: 50%; /* 地図が右にある場合 */
}

/* テキストポジション用アニメーション */
.positioned-text.animate-in {
    animation: textSlideIn 0.6s ease-out;
}

.positioned-text.animate-out {
    animation: textSlideOut 0.4s ease-in;
}

@keyframes textSlideIn {
    from {
        opacity: 0;
        transform: translateX(-20px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes textSlideOut {
    from {
        opacity: 1;
        transform: translateX(0);
    }
    to {
        opacity: 0;
        transform: translateX(20px);
    }
}

/* 既存の.stepスタイルとの競合回避 */
.step.positioned-text {
    /* positioned-textが優先されるように !important を使用 */
    display: flex !important;
    align-items: center !important;
    /* justify-content: center !important; */ /* 削除: PositionManagerに委譲 */
    padding: 2rem !important;
}

/* デバッグ用（開発時のみ） */
.positioned-text.debug {
    border: 2px dashed rgba(0, 255, 0, 0.5);
    background: rgba(0, 255, 0, 0.1);
}

.positioned-text.debug::before {
    content: attr(data-text-position-info);
    position: absolute;
    top: -25px;
    left: 0;
    background: rgba(0, 128, 0, 0.8);
    color: white;
    padding: 2px 8px;
    font-size: var(--font-size-xs);
    border-radius: 3px;
    z-index: 1000;
}

/* D3チャート共通スタイル */
.chart-title {
    font-family: var(--font-family-serif) !important;
    font-size: 16px !important; /* 強制的に16px */
    font-weight: var(--font-weight-bold) !important;
}

/* SVG内のtext要素に対する強制スタイル */
svg text.chart-title {
    font-family: var(--font-family-serif) !important;
    font-size: 16px !important;
    font-weight: 700 !important;
}

/* チャートタイトルを更に強力に指定 */
svg text[class*="chart-title"],
svg text.chart-title,
text.chart-title {
    font-family: "Yu Mincho", "YuMincho", "Hiragino Mincho ProN", "Hiragino Mincho Pro", "Noto Serif JP", serif !important;
    font-size: 16px !important;
    font-weight: 700 !important;
}

.chart-axis {
    font-size: var(--font-size-xs);
    fill: none;
}

.chart-axis .domain {
    stroke: #333;
    stroke-width: 1px;
}

.chart-axis .tick line {
    stroke: #333;
    stroke-width: 1px;
}

.chart-line {
    fill: none;
    stroke-width: 2;
    transition: all 0.5s ease;
}

.chart-circle {
    transition: all 0.5s ease;
}

/* 棒グラフスタイル */
.bar {
    transition: all 0.5s ease;
}

.bar:hover {
    opacity: 0.8;
}

/* 円グラフスタイル */
.pie-slice {
    stroke: #fff;
    stroke-width: 2;
    transition: all 0.5s ease;
}

.pie-slice:hover {
    opacity: 0.8;
}

/* 地図スタイル */
.map-country {
    transition: all 0.3s ease;
}

.map-city {
    fill: #ef4444;
    stroke: #fff;
    stroke-width: 2;
    transition: all 0.3s ease;
}

.map-city:hover {
    fill: #dc2626;
    r: 8;
}

/* レスポンシブ対応 */
@media (max-width: 768px) {
    .step {
        padding: 1rem;
    }
    
    .step .max-w-lg {
        max-width: 100%;
        margin: 0 1rem;
    }
}

/* スムーズスクロール */
html {
    scroll-behavior: smooth;
}

/* ローディング状態 */
.loading {
    opacity: 0.5;
    pointer-events: none;
}

/* エラー状態 */
.error {
    background-color: #fee2e2;
    border: 1px solid #fca5a5;
    color: #dc2626;
}

/* テキスト非表示状態 */
.step.text-hidden .max-w-lg,
.step.text-hidden .text-container,
.step.text-hidden [class*="bg-white"] {
    display: none !important;
}

/* テキスト非表示時のステップ調整 */
.step.text-hidden {
    /* 必要に応じて追加のスタイル調整 */
}

/* フッタースタイル */
.site-footer {
    background-color: rgb(118, 80, 127);
    color: #ffffff;
    padding: 3rem 0 2rem 0;
    margin-top: 0;
    min-height: 100vh;
    width: 100%;
    display: flex;
    align-items: center;
}

.footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    width: 100%;
}

.footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem 4rem;
    align-items: start;
}

.footer-section h3 {
    font-family: var(--font-family-serif);
    font-size: 1.25rem;
    font-weight: var(--font-weight-bold);
    margin: 0 0 1rem 0;
    color: #ffffff;
}

.footer-logo {
    margin-bottom: 1rem;
}

.footer-logo img {
    height: auto;
    max-width: 200px;
    filter: brightness(0) invert(1);
}

.footer-tagline {
    font-size: 0.875rem;
    color: #d1d5db;
    margin: 0.5rem 0 0 0;
    font-style: italic;
}

.footer-address {
    font-size: 0.875rem;
    line-height: 1.6;
    margin-bottom: 1rem;
    color: #e5e7eb;
    white-space: nowrap;
}

.footer-contact {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1rem;
}

.contact-item {
    font-size: 0.875rem;
    color: #e5e7eb;
    white-space: nowrap;
}

.contact-item span {
    font-weight: var(--font-weight-medium);
    color: #ffffff;
    margin-right: 0.25rem;
}

.footer-links {
    display: none;
}

.footer-copyright {
    border-top: 1px solid #374151;
    margin-top: 2rem;
    padding-top: 1rem;
    text-align: center;
    font-size: 0.75rem;
    color: #9ca3af;
}

/* レスポンシブデザイン - フッター */
@media (max-width: 768px) {
    .footer-content {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    
    .footer-contact {
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .footer-container {
        padding: 0 1rem;
    }
    
    .site-footer {
        padding: 2rem 0 1.5rem 0;
    }
}

/* ====================================
   インライン（線末）ラベルスタイル
   ==================================== */

/* インラインラベルグループ */
.inline-labels {
    pointer-events: none;
}

/* ラベルテキスト */
.inline-label {
    font-family: var(--font-family-serif) !important;
    font-weight: var(--font-weight-bold) !important;
    font-size: var(--font-size-sm) !important;
    text-shadow: 0 0 3px rgba(255, 255, 255, 0.8);
    pointer-events: none;
    transition: opacity var(--animation-short) var(--easing-ease);
}

/* 引き出し線 */
.leader-line {
    opacity: 0.7;
    stroke-dasharray: 2,2;
    pointer-events: none;
    transition: opacity var(--animation-short) var(--easing-ease);
}

/* ラベル背景 */
.inline-labels rect {
    opacity: 0.9;
    transition: opacity var(--animation-short) var(--easing-ease);
    rx: 3;
    ry: 3;
}

/* アニメーション状態 */
.inline-label.entering {
    opacity: 0;
    transform: translateX(-10px);
}

.inline-label.entered {
    opacity: 1;
    transform: translateX(0);
}

.inline-label.exiting {
    opacity: 0;
    transform: translateX(10px);
}

/* ホバー状態（デスクトップ用） */
@media (hover: hover) {
    .inline-labels:hover .leader-line {
        opacity: 1;
    }
    
    .inline-labels:hover rect {
        opacity: 1;
    }
}

/* レスポンシブ対応 */
@media (max-width: 768px) {
    .inline-label {
        font-size: var(--font-size-xs) !important;
    }
    
    .inline-labels rect {
        opacity: 0.95; /* モバイルでは背景をより強調 */
    }
    
    .leader-line {
        stroke-width: 1.5;
    }
}

@media (max-width: 480px) {
    .inline-label {
        font-size: 10px !important;
    }
    
    .leader-line {
        display: none; /* 非常に小さい画面では引き出し線を非表示 */
    }
}

/* ダークモード対応（将来的な拡張用） */
@media (prefers-color-scheme: dark) {
    .inline-label {
        text-shadow: 0 0 3px rgba(0, 0, 0, 0.8);
    }
    
    .inline-labels rect {
        fill: rgba(0, 0, 0, 0.9);
        stroke: var(--color-primary);
    }
}

/* アクセシビリティ対応 */
@media (prefers-reduced-motion: reduce) {
    .inline-label,
    .leader-line,
    .inline-labels rect {
        transition: none !important;
    }
}
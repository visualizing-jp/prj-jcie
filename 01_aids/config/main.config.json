{
  "version": "1.0.0",
  "configFiles": {
    "content": "config/content.config.json",
    "settings": "config/settings.config.json",
    "app": "config/app.config.json",
    "theme": "config/theme.config.json",
    "animation": "config/animation.config.json"
  },
  "environment": {
    "auto": true,
    "development": "config/environment/development.json",
    "production": "config/environment/production.json"
  },
  "loadOrder": [
    "environment",
    "app",
    "theme", 
    "animation",
    "settings",
    "content"
  ],
  "mergeStrategy": {
    "deep": true,
    "arrayMerge": "replace",
    "overwriteOnConflict": true
  },
  "fallbacks": {
    "useDefaults": true,
    "continueOnError": true,
    "logErrors": true
  }
}